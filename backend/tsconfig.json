
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}